package br.com.falhas.implementacao;

public class TesteFalhas {

	public static void main(String[] args) {
		
		String palavra = "";
		
		try { //ficam as linhas onde podem ser disparadas as excecoes
			
			int numero = Integer.parseInt("1");
			System.out.println(palavra.length());
			System.out.println(numero);
			
			int x[] = new int[2];
			x[0] = 15;
			x[1] = 98;
			x[2] = 12;
		} 
		
		//catch(Exception e) {    // trata a excecao. Exception é o pai de todas as excecoes
		catch(NumberFormatException e) {
			System.out.println("Numero invalido");
		}
		catch(NullPointerException e) {
			System.out.println("Objeto nulo");
		}
		catch(Exception e) {
			e.printStackTrace();
		}
	}
}
